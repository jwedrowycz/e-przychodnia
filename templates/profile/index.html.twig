{% extends 'base.html.twig' %}

{% block title %} {{ app.user.username }} {% endblock %}

{% block body %}
<div class="container">
    <h1>{{ app.user.name ~ ' ' ~ app.user.lastName }} </h1>
    <span><b>Konto utworzono: </b>{{ app.user.createdAt|date('d-m-Y H:i') }}</span>
    <p><b>Email: </b> {{ app.user.email }}</p>
    <p><b>Data urodzenia: </b> {{ app.user.birthday|date('d-m-Y') }}</p>
    <p><b>PESEL: </b> {{ app.user.PESEL }}</p>
    <p><b>Numer telefonu: </b> {{ app.user.numPhone }}</p>
    <p><b>Adres zamieszkania: </b> {{ app.user.address ~ ', ' ~ app.user.city ~ ' ' ~ app.user.postCode }}</p>
    <p><b>Łączna liczba wizyt: </b>{{ countVisits }}</p>
</div>
{% endblock %}
