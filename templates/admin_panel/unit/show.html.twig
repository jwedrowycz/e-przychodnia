{% extends 'admin_panel/index.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes(['success', 'fail']) %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    <h1>{{ clinic.name }}</h1>
     <h1>Lekarze</h1>
    <table class="admin-table">
        <tr>
            <th>Id jednostki</th>
            <th>Id lekarza</th>
            <th>Numer PWZ</th>
            <th>Imie i nazwisko</th>
            <th>Specjalizacja</th>
            <th colspan="2">Akcja</th>

        </tr>
        <tr>
    {% for doctor in doctors %}
        <td>{{ doctor.unit }}</td>
        <td>{{ doctor.id }}</td>
        <td>{{ doctor.numPwz }}</td>
        <td>{{ doctor.lastName ~ ' ' ~ doctor.name }}</td>
        <td>{{ doctor.spec }}</td>
        <td>
            <a class="link-blue" href="{{ path('admin.work_time', {'id': doctor.unit}) }}">Czas pracy</a>
        </td>
        <td>
            <a class="delete" href="{{ path('admin.unit_delete', {'idDoctor': doctor.id, 'idClinic': clinic.id}) }}">Usu≈Ñ</a>
        </td>
        </tr>
    {% endfor %}
    </table>

    <a class="link" href="{{ path('admin.unit_add', {'idClinic': clinic.id}) }} ">Dodaj lekarza do poradni</a>
{% endblock content %}
