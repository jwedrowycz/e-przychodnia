{% extends 'admin_panel/index.html.twig' %}

{% block content %}
     <div class="container admin">
     {% for label, messages in app.flashes(['success', 'fail']) %}
          {% for message in messages %}
               <div class="flash-{{ label }}">
                    {{ message }}
               </div>
          {% endfor %}
     {% endfor %}
     <h1>{{ clinic.name }}</h1>
     <h3>Dodaj lekarza do poradni</h3>
     <table class="admin-table">
          <tr>
               <th>Numer PWZ</th>
               <th>Imie i nazwisko</th>
               <th>Specjalizacja</th>
               <th></th>
          </tr>
          {% for d in doctors %}
               <tr>
                    <td>{{ d.numPwz }}</td>
                    <td>{{ d.lastName ~ ' ' ~ d.name }}</td>
                    <td>{{ d.spec }}</td>
                    <td>
                         <a class="add" href="{{ path('admin.unit_create', {'idDoctor': d.id, 'idClinic': clinic.id}) }}">Dodaj</a>
                    </td>
               </tr>
          {% endfor %}
     </table>
     <a class="link-as-btn" href="{{ path('admin.doctors') }}">Dodaj nowego lekarza</a>
     </div>
{% endblock content %}
