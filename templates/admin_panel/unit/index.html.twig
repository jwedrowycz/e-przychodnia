{% extends 'admin_panel/index.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes(['success', 'fail']) %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
<h1>Jednostki</h1>
    <table class="admin-table">
        <tr>
            <th>Id jednostki</th>
            <th>Id lekarza</th>
            <th>Numer PWZ</th>
            <th>Imie i nazwisko</th>
            <th>Specjalizacja</th>
            <th>Poradnia</th>
            <th colspan="2">Akcja</th>

        </tr>
        <tr>
    {% for u in unit %}
        <td>{{ u.unit }}</td>
        <td>{{ u.id }}</td>
        <td>{{ u.numerPWZ }}</td>
        <td>{{ u.nazwisko ~ ' ' ~ u.imie }}</td>
        <td>{{ u.specjalizacja }}</td>
        <td>{{ u.poradniaNazwa }}</td>
        <td>
            <a class="link-blue" href="{{ path('admin.work_time', {'id': u.unit}) }}">Czas pracy</a>
        </td>
        <td>
            <a class="delete" href="{{ path('admin.unit_delete', {'idDoctor': u.id, 'idClinic': u.clinicId}) }}">Usu≈Ñ</a>
        </td>
        </tr>
    {% endfor %}
    </table>

{% endblock content %}
