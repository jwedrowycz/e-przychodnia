{% extends 'admin_panel/index.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes(['success', 'fail']) %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <h1>Lekarze</h1>
    <table class="admin-table">
        <tr>
            <th>Id</th>
            <th>Numer PWZ</th>
            <th>Imie i nazwisko</th>
            <th>Specjalizacja</th>
            <th>Status</th>
            <th colspan="2">Akcje</th>
        </tr>
    {% for lekarz in lekarze %}
        <tr>
            <td>{{ lekarz.id }}</td>
            <td>{{ lekarz.numerPWZ }}</td>
            <td>{{ lekarz.nazwisko ~ ' ' ~ lekarz.imie }}</td>
            <td>{{ lekarz.specjalizacja }}</td>
            {% if lekarz.status == 1 %}
            <td>Aktywny</td>
            {% else %}
            <td>Nieaktywny</td>
            {% endif %}
            <td><a class="link-blue" href="{{ path('admin.lekarz_edit', {'id':lekarz.id}) }}">Edytuj</a></td>
            <td><a class="delete" href="{{ path('admin.lekarz_delete', {'id':lekarz.id}) }}">Usu≈Ñ</a></td>
        </tr>
    {% endfor %}
    </table>
    <a href="{{ path('admin.lekarz_add') }}">Dodaj lekarza</a>

{% endblock %}
