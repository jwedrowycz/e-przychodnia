{% extends 'admin_panel/index.html.twig' %}



{% block content %}
{# read and display several types of flash messages #}
{% for label, messages in app.flashes(['success', 'fail']) %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    <h1>Poradnie</h1>
    <table class="admin-table">
        <tr>
            <th>Id poradni</th>
            <th>Nazwa</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Akcja</th>
            {% endif %}

        </tr>
    {% for c in clinics %}
        <tr>
            <td>{{ c.id }}</td>
            <td><a class="link-blue" href="{{ path('admin.unit_show', {id: c.id}) }}">{{ c.name }}</a></td>
            <td>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="delete" href="{{ path('admin.clinic_delete', {id: c.id}) }}">Usu≈Ñ</a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </table>
{#    <a href="{{ path('admin.clinic_add') }}">Dodaj poradnie</a>#}
    <button class="form-btn" id="toggleBtn">Dodaj poradnie</button>
    {{ include('admin_panel/clinic/_form.html.twig') }}


    <script>
        $(document).ready(function() {
            $("#toggleBtn").click(function () {
                $(".form.hidden").slideDown();
            });
        });

    </script>

{% endblock content %}

