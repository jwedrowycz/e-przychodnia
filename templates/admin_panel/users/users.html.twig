{% extends 'admin_panel/index.html.twig' %}


{% block content %}
    {% for label, messages in app.flashes(['success', 'fail']) %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <h1>Użytkownicy</h1>

    <table class="admin-table">
        <tr>
            <th>Id</th>
            <th>Login</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Rola</th>
            <th colspan="2">Akcje</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.roles[0] }}</td>
            <td><a class="add" href="{{ path('admin.user_profile', {id:user.id}) }}">Edytuj</a></td>
            <td><a class="delete" href="{{ path('admin.user_delete', {id:user.id}) }}">Usuń</a></td>
        </tr>
        {% endfor %}
    </table>

    <a href="{{ path('admin.add_user') }}">Dodaj użytkownika</a>

{% endblock %}