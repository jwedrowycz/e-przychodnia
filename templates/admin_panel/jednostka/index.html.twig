{% extends 'admin_panel/index.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes(['success', 'fail']) %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
<h1>Jednostki</h1>
    <table class="admin-table">
        <tr>
            <th>Id jednostki</th>
            <th>Id lekarza</th>
            <th>Numer PWZ</th>
            <th>Imie i nazwisko</th>
            <th>Specjalizacja</th>
            <th>Poradnia</th>
            <th colspan="2">Akcja</th>

        </tr>
        <tr>
    {% for j in jednostka %}
        <td>{{ j.jednostka }}</td>
        <td>{{ j.id }}</td>
        <td>{{ j.numerPWZ }}</td>
        <td>{{ j.nazwisko ~ ' ' ~ j.imie }}</td>
        <td>{{ j.specjalizacja }}</td>
        <td>{{ j.poradniaNazwa }}</td>
        <td>
            <a class="link-blue" href="{{ path('admin.czas_pracy', {'id': j.jednostka}) }}">Czas pracy</a>
        </td>
        <td>
            <a class="delete" href="{{ path('admin.jednostka_delete', {'idLekarza': j.id, 'idPoradni': j.poradniaId}) }}">Usu≈Ñ</a>
        </td>
        </tr>
    {% endfor %}
    </table>

{% endblock content %}
