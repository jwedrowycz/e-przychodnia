{% extends 'admin_panel/index.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes(['success', 'fail']) %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    <h1>{{ poradnia.nazwa }}</h1>
     <h1>Lekarze</h1>
    <table class="admin-table">
        <tr>
            <th>Id lekarza</th>
            <th>Numer PWZ</th>
            <th>Imie i nazwisko</th>
            <th>Specjalizacja</th>
            <th>Akcja</th>

        </tr>
        <tr>
    {% for lekarz in lekarze %}
        <td>{{ lekarz.id }}</td>
        <td>{{ lekarz.numerPWZ }}</td>
        <td>{{ lekarz.nazwisko ~ ' ' ~ lekarz.imie }}</td>
        <td>{{ lekarz.specjalizacja }}</td>
        <td>
            <a class="delete" href="{{ path('admin.jednostka_delete', {idLekarza: lekarz.id, idPoradni: poradnia.id}) }}">Usu≈Ñ</a>
        </td>
        </tr>
    {% endfor %}
    </table>

    <a href="{{ path('admin.jednostka_add', {id_poradni: poradnia.id}) }} onclick="return confirm('are u sure?'" ">Dodaj lekarza do poradni</a>
{% endblock content %}
